///|
pub(all) enum CodeUnit {
  CodeUnit1
  CodeUnit2
  CodeUnit4
}

///|
pub typealias @regex.(Regex, Encoding)

///|
pub typealias CodeBlock = String

///|
pub(all) struct Rule {
  name : String
  signature : String
  lexee_var : String
  // rest_binder is only used in new syntax
  patterns : Array[(Regex, String?, CodeBlock)] // (regex, rest_binder, action)
} derive(Show, ToJson)

///|
pub(all) struct Lex {
  header : CodeBlock
  rules : Array[Rule]
  trailer : CodeBlock
} derive(Show, ToJson)
